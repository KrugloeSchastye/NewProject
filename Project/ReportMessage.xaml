<Window x:Class="Project.ReportMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Формат сохранения" Height="140" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="В каком формате необходимо сформировать отчет?" FontSize="20" Margin="5" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
            <Button Content="Excel" Name="btnExcel" Click="btnExcel_Click"/>
            <Button Content="PDF/Word" Name="btnPDF" Click="btnPDF_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
